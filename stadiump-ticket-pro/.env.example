# Stadium Ticket Pro - Environment Variables
# Copy to .env and fill values

# === Database (PostgreSQL 15+) ===
DATABASE_URL=postgresql://postgres:example@db:5432/tickets
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example
POSTGRES_DB=tickets

# === Redis (cache + locks) ===
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# === JWT ===
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# === Stripe (sandbox) ===
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# === App ===
NODE_ENV=development
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
# Pour d√©ploiement Vercel : URL du frontend. Plusieurs origines : FRONTEND_URL=https://a.vercel.app,https://b.vercel.app

# === SMTP (emails) ===
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@stadium-ticket-pro.ma

# === Observability ===
SENTRY_DSN=
PROMETHEUS_METRICS_ENABLED=true

# === Seat lock TTL (seconds) ===
SEAT_LOCK_TTL=300
